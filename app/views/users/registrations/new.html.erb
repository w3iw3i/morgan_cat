<div class="landing-title mt-5">
  <h2>New User Sign up</h2>
</div>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, 
                  label: "First Name", 
                  placeholder: "John",
                  autofocus: true,
                  required: false %>
      <%= f.input :last_name, 
                  label: "Last Name", 
                  placeholder: "Doe",
                  required: false %>
      <%= f.input :dob, 
                  as: :date, 
                  html5: true,
                  label: "Date of Birth",
                  required: false %>
      <%= f.input :monthly_income,
                  label: "Monthly Income",
                  placeholder: "Please input your monthly income",
                  required: false %>
      <%= f.input :monthly_expenses,
                  label: "Monthly Expenses",
                  placeholder: "Please input your monthly expenses",
                  required: false %>
      <%= f.input :email, 
                  placeholder: "john.doe@gmail.com",
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions landing-btn">
      <%= f.button :submit, "Sign up", class: 'btn btn-gradient' %>
    </div>
  <% end %>

<%= render "users/shared/links" %>
